<h1>Greetings</h1>

<p>Timestamp: <%= Time.now.to_i %></p>

<ul id="greeting-list">

  <% @greetings.each do |greeting| %>
    <li><%= greeting.note %></li>
  <% end %>

</ul>

<div>

  <%= form_for @greeting, remote: true, html: {id: "greeting-form"} do |f| %>
    <%= f.label :note, "Say something:" %>
    <%= f.text_field :note %>
    <%= f.submit "Submit" %>
  <% end %>

</div>


  